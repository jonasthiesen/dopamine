{
  "name": "Dopamine",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Remove dopamine loops on websites to increase productivity",
  "icons": {
    "128": "images/dopamine-128.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "scripts/helper.js",
        "scripts/dopamine.js",
        "scripts/register.js",
        "scripts/blocker.js",
        "scripts/app.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "styles/*.css"
  ],
  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "*://*/*"
  ],
  "browser_action": {
    "default_title": "Dopamine",
    "default_popup": "popup.html"
  }
}
